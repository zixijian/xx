#nop ==自动返回原点==;
#nop 手动行走 path_go;
#alias {pg} {
  #echo @bc2{开始记录路径，指令 pb 返回。};
  #path new;
  #class pgtmp open;
  #act {^这个方向没有出路。$} {#path del};
  #class pgtmp close;
};
#nop 路径自动行走 path_auto，路径必须带括号;
#nop 示例：pa {w;e;s;bli;bla};
#alias {pa} {
  #echo @bc2{开始行走，指令 pb 返回原点。};
  #path new;
  #class pgtmp open;
  #act {^这个方向没有出路。$} {#path del};
  #class pgtmp close;
  #local done {#echo {@bc2{行走完毕，指令 pb 返回原点。}}};
  #local path_tmp %0;
  #local path_tmp {$path_tmp;$done};
  #path load $path_tmp;
  #path run 0.5;
}
#nop 自动返回 path_back;
#alias {pb} {
  #echo @bc1{返回原点，指令 pg 记录新路径。};
  #path save backward ptmp;
  #local done {#echo {@bc2{行走完毕，已返回原点。}}};
  #local path_tmp {$ptmp;$done};
  #path load $path_tmp;
  #path run 0.5;
  #path end;
  #class pgtmp kill;
};

#nop 慢速执行，必须带括号;
#nop 示例：slowdo {w;w;s};
#alias slowdo {
  #path load %0;
  #path run 1;
};

